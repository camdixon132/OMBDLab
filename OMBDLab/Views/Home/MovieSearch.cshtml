@{
}

<form asp-method="post" asp-action="MovieSearch">
    <p>Please enter title of movie</p>
    <input type="text" name="movie" />

    <input type="submit" />
</form>

@{
    if (Model != null)
    {

            <h2>@Model.Title</h2>
            <p>@Model.Year</p>
            <p>@Model.Genre</p>
            <p>@Model.Rated</p>
        
    }
}
